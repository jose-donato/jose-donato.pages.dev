---
import { getEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import PDFViewer from "../../components/PDFViewer.astro";
import { render } from "astro:content";

const { id = "" } = Astro.params;

const post = await getEntry("blog", id);

const { Content } = await render(post);

// Check if post has PDF file
const hasPDF = post?.data.file?.endsWith(".pdf");
---

<Layout
  seo={{
    title: post?.data.title || "Blog Post",
    description: post?.data.snippet || "Blog post details",
  }}
>
  <article class="prose prose-invert max-w-none">
    <h1 class="text-3xl font-bold">{post?.data.title}</h1>

    {
      post?.data.date && (
        <p class="text-sm text-text-muted mt-2">{post.data.date}</p>
      )
    }

    {
      post?.data.author && (
        <p class="text-sm text-text-muted">By {post.data.author}</p>
      )
    }

    {
      hasPDF ? (
        <PDFViewer pdfPath={`/assets/${post?.data.file}`} />
      ) : (
        <div class="mt-6">
          <Content />
        </div>
      )
    }
  </article>
</Layout>
